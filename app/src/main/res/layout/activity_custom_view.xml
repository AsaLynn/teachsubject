<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout

        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <com.example.think.mytest.customview.CustomTitleView
            android:layout_width="200dp"
            android:layout_height="100dp"
            app:titleText="3712"
            app:titleTextColor="#ff0000"
            app:titleTextSize="40sp" />

        <com.example.think.mytest.customview.CustomTitleView
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:titleText="3713"
            app:titleTextColor="#ff0000"
            app:titleTextSize="40sp" />
    </LinearLayout>

    <LinearLayout
        android:visibility="visible"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">


        <com.example.think.mytest.customview.RectangleView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.example.think.mytest.customview.RainbowBar
            android:visibility="visible"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:rainbowbar_color="@android:color/holo_red_light"
            app:rainbowbar_hspace="120dp"
            app:rainbowbar_vspace="10dp">
        </com.example.think.mytest.customview.RainbowBar>
    </LinearLayout>

</LinearLayout>
